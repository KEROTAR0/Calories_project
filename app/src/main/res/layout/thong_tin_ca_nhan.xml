<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/thong_tin_ca_nhan_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_weight="0"
        android:paddingBottom="10dp">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Tên người dùng"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Name"
            android:id="@+id/user_name"
            android:textSize="24dp"
            android:textColor="@color/light_blue"
            android:layout_margin="15dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Giới tính"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Nam"
            android:id="@+id/user_gender"
            android:textSize="24dp"
            android:textColor="@color/light_blue"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Tuổi"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="0"
            android:id="@+id/user_age"
            android:textColor="@color/light_blue"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Chiều cao"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="0"
            android:id="@+id/user_height"
            android:textSize="24dp"
            android:textColor="@color/light_blue"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="cm"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Cân nặng"
            android:textSize="24dp"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="0"
            android:id="@+id/user_weight"
            android:textSize="24dp"
            android:textColor="@color/light_blue"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Kg"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/black_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Đổi thông tin người dùng   "
            android:textColor="@color/light_blue"
            android:textStyle="bold"
            android:background="@drawable/button_layout"
            android:id="@+id/btn_doi_info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Xoá thông tin người dùng  "
            android:textColor="@color/red"
            android:textStyle="bold"
            android:background="@drawable/button_layout"
            android:id="@+id/btn_xoa_info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           Chỉnh sửa mục tiêu        "
            android:textStyle="bold"
            android:textColor="@color/greend"
            android:background="@drawable/button_layout"
            android:id="@+id/btn_muc_tieu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>